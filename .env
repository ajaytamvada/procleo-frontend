# Autovitica P2P Frontend Environment Configuration
# 
# This file contains default environment variables for the application.
# DO NOT commit sensitive information to version control.
# Create .env.local for local development overrides.

# Application Configuration
VITE_APP_NAME=Autovitica P2P
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Procurement to Pay Management System

# API Configuration
VITE_API_BASE_URL=http://localhost:8080/api
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3

# Authentication Configuration
VITE_AUTH_TOKEN_REFRESH_THRESHOLD=300000
VITE_AUTH_SESSION_TIMEOUT=3600000

# Feature Flags
VITE_FEATURE_ADVANCED_SEARCH=true
VITE_FEATURE_DARK_MODE=true
VITE_FEATURE_ANALYTICS=false
VITE_FEATURE_NOTIFICATIONS=true
VITE_FEATURE_REAL_TIME=false
VITE_FEATURE_BULK_OPS=true
VITE_FEATURE_EXPORT=true

# UI Configuration
VITE_DEFAULT_PAGE_SIZE=20
VITE_MAX_PAGE_SIZE=100
VITE_TOAST_DURATION=5000

# File Upload Configuration
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet

# Development Configuration
VITE_ENABLE_DEVTOOLS=true
VITE_LOG_LEVEL=info
VITE_DEBUG_MODE=false

# Analytics Configuration (if enabled)
VITE_ANALYTICS_ID=
VITE_ANALYTICS_DEBUG=false

# Monitoring Configuration
VITE_SENTRY_DSN=
VITE_SENTRY_ENVIRONMENT=development